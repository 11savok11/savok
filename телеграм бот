import pizzabot
bot - pizzabot.Pizzabot("API KEY")
@bot.message_handler(commands=['start'])
def main(message): 
  bot.send_message(message.chat.id, 'Здраствуйте, я телеграмм бот пиццеррии, сделайте заказ из моего списка.')
