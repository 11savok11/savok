@bot.message_handler(func=lambda message: message.text.isdigit())
def take_order(message):
    pizza_choice = int(message.text)
    if pizza_choice in [1.1, 1.2, 1.3, 1.4, 1.5]:
        orders[message.chat.id] = pizza_choice
        bot.send_message(message.chat.id, "Ваш заказ принят! Спасибо!")
    else:
        bot.send_message(message.chat.id, "Пожалуйста, выберите корректный номер пиццы.")
